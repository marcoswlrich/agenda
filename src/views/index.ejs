<section class="container">
  <div class="titulo-descrition">
    <h1>Registro</h1>
    <p>Abaixo estão todos os seus contatos.</p>
  </div>

  <% if(errors.length > 0) { %> <% errors.forEach(function(error) { %>
  <div class="error" role="alert"><%= error %></div>
  <% }) %> <% } %> <% if(success.length > 0) { %> <%
  success.forEach(function(success) { %>
  <div class="error" role="alert"><%= success %></div>
  <% }) %> <% } %> <% if(contatos.length > 0) { %>
  <table class="tabel">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Username</th>
        <th>Email</th>
        <th>Telefone</th>
        <th>Editar</th>
      </tr>
    </thead>
    <tbody>
      <% contatos.forEach(contato => { %>
      <tr>
        <td><%= contato.nome %></td>
        <td><%= contato.sobrenome %></td>
        <td><%= contato.email %></td>
        <td><%= contato.telefone %></td>
        <td>
          <button>
            <a class="editar" href="/contato/<%= contato._id %>">editar</a>
          </button>
          <button>
            <a class="excluir" href="/contato/delete/<%= contato._id %>"
              >excluir</a
            >
          </button>
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
  <% } else { %>
  <p>Não existe contatos na sua agenda.</p>
  <% } %>
</section>
